{% extends 'base.html.twig' %}

{% block title %}Hello You !{% endblock %}

{% block body %}

        <!-- Style CSS -->
        <style>
            .colorCategory{
                background-color: {{magazinebyid.category.color}};
            }
        </style>

        <!-- Contenu -->
        <main class="p-4">
            <div class="container">
                <div class="row">
                    <div class="col-12 d-flex">
                        <div class="col-6 d-flex text-start">
                            <h2 class="fs-3">Détails du Magazine <span class="text-danger">{{magazinebyid.name}}</span></h2>
                        </div>
                        <div class="col-6 d-flex justify-content-end">
                            <a href="https://www.youtube.com/watch?v=iik25wqIuFo" class="btn btn-outline-danger my-auto">Retour</a>
                        </div>
                    </div>
                    <div class="col-12 d-block border-bottom my-3"></div>
                    <div class="col-12 d-flex mt-1">
                        <div class="col-1 m-auto">
                            <p class="fw-bold text-center text-secondary">#</p>
                        </div>
                        <div class="col-2 m-auto">
                            <p class="fw-bold text-center">Image</p>
                        </div>
                        <div class="col-3 m-auto">
                            <p class="fw-bold text-center">Nom</p>
                        </div>
                        <div class="col-1 m-auto">
                            <p class="fw-bold text-center">Prix</p>
                        </div>
                        <div class="col-2 m-auto">
                            <p class="fw-bold text-center">Date de sortie</p>
                        </div>
                        <div class="col-3 m-auto">
                            <p class="fw-bold text-center">Catégorie</p>
                        </div>
                    </div>
                    <div class="col-12 d-block border-bottom mb-2"></div>
                    <div class="col-12 d-flex mb-3 mt-2 border-bottom">
                        <div class="col-1 m-auto">
                            <p class="text-center text-secondary">{{magazinebyid.id}}</p>
                        </div>

                        {% if magazinebyid.cover is not null %}
                            <div class="col-2 d-flex justify-content-center m-auto">
                                <img src="{{ vich_uploader_asset(magazinebyid, 'coverFile')|imagine_filter('thumbnail') }}" alt="Image du magazine {{magazinebyid.name}}" class="img-fluid rounded mb-3">
                            </div>
                        {% else %}
                            <div class="col-2 d-flex justify-content-center m-auto">
                                <img src="{{ asset('imgs/blank.png')|imagine_filter('thumbnail') }}" alt="Pas d'image" class="img-fluid rounded mb-3">
                            </div>
                        {% endif %}

                        <div class="col-3 m-auto">
                            <p class="text-center">{{magazinebyid.name}}</p>
                        </div>
                        <div class="col-1 m-auto">
                            <p class="text-center">{{magazinebyid.price}} €</p>
                        </div>
                        <div class="col-2 m-auto">
                            <p class="text-center">{{magazinebyid.createdAt|date('d.m.Y')}}</p>
                        </div>
                        <div class="col-3 m-auto">
                            <p class="text-center"><span class="badge rounded-pill colorCategory fw-light fs-6">{{magazinebyid.category.name}}</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    
{% endblock %}
